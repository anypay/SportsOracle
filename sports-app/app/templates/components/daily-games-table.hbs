<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Game ID</th>
        <th>Date</th>
        <th>Home Team</th>
        <th>Away Team</th>
        <th>Propose Bet</th>
      </tr>
    </thead>
    <tbody>
      {{#each games as |game|}}
      <tr>
        <td> {{#link-to "mlb-game" game.sports_feed_id}}{{game.sports_feed_id}}{{/link-to}}</td>
        <td>{{game.date}}</td>
        <td>{{game.home_team}}</td>
        <td>{{game.away_team}}</td>
        <td>{{#link-to "new-proposal" game.sports_feed_id}} <button type="button" class="btn btn-warning"
            {{action "bet" game}} {{/link-to}}>Bet</button></td>
      </tr>


      {{/each}}
    </tbody>
  </table>
</div>





{{yield}}