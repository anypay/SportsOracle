
<table class="pure-table">
  <thead>
    <tr>
      <th>Game ID</th>
      <th>Date</th>
      <th>Home Team</th>
      <th>Home Score</th>
      <th>Away Team</th>
      <th>Away Score</th>
      <th>Propose Bet</th>
    </tr>
  </thead>
  <tbody>
    {{#each games as |game|}}
      <tr class="roi">
        <td> {{#link-to "mlb-game" game.sports_feed_id}}{{game.sports_feed_id}}{{/link-to}}</td>
        <td>{{game.date}}</td>
        <td>{{game.home_team}}</td>
        <td>{{game.home_score}}</td>
        <td>{{game.away_team}}</td>
        <td>{{game.away_score}}</td>
        <td><button {{action "bet" game}}>bet</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>



{{yield}}
